install! 'cocoapods', :deterministic_uuids => false

platform :ios, '9.0'
use_frameworks!

target ‘Ecity’ do

   
    pod 'MarqueeLabel', '~> 2.5', :inhibit_warnings => true  #跑马灯效果
    pod 'Mantle', '~> 2.0', :inhibit_warnings => true
    pod 'ISO8601DateFormatter', :inhibit_warnings => true
    pod 'SVProgressHUD', :inhibit_warnings => true
    pod 'AFNetworking', '~> 3.1.0'           #压缩工具
    pod 'Overcoat', '~> 4.0.0-beta.2', :inhibit_warnings => true

     pod 'Overcoat+PromiseKit', '~> 4.0.0-beta.2', :inhibit_warnings => true
end
